<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cloud Storage Automatic Sync Cron Job -->
        <record id="cron_cloud_storage_auto_sync" model="ir.cron">
            <field name="name">Cloud Storage: Automatic Sync</field>
            <field name="model_id" ref="model_cloud_storage_sync_service"/>
            <field name="state">code</field>
            <field name="code">model.automatic_sync()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>