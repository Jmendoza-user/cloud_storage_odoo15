<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cloud Storage Sync Log Form View -->
        <record id="view_cloud_storage_sync_log_form" model="ir.ui.view">
            <field name="name">cloud.storage.sync.log.form</field>
            <field name="model">cloud_storage.sync.log</field>
            <field name="arch" type="xml">
                <form string="Sync Log" create="false" edit="false">
                    <header>
                        <button name="action_retry_sync" type="object" string="Retry Sync" 
                                class="oe_highlight" attrs="{'invisible': [('status', '=', 'success')]}"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="file_name"/>
                            </h1>
                            <h2>
                                <field name="model_name"/> (ID: <field name="record_id"/>)
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="sync_date"/>
                                <field name="sync_type"/>
                                <field name="config_id"/>
                            </group>
                            <group>
                                <field name="file_size_bytes" widget="integer"/>
                                <field name="original_path"/>
                                <field name="drive_file_id"/>
                            </group>
                        </group>
                        <group string="Drive Links" attrs="{'invisible': [('drive_url', '=', False)]}">
                            <field name="drive_url" widget="url"/>
                        </group>
                        <group string="Error Details" attrs="{'invisible': [('error_message', '=', False)]}">
                            <field name="error_message" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Cloud Storage Sync Log Tree View -->
        <record id="view_cloud_storage_sync_log_tree" model="ir.ui.view">
            <field name="name">cloud.storage.sync.log.tree</field>
            <field name="model">cloud_storage.sync.log</field>
            <field name="arch" type="xml">
                <tree string="Synchronization Logs" create="false">
                    <field name="sync_date"/>
                    <field name="file_name"/>
                    <field name="model_name"/>
                    <field name="sync_type"/>
                    <field name="status" decoration-success="status == 'success'" 
                           decoration-danger="status == 'error'" decoration-warning="status == 'partial'"/>
                    <field name="file_size_bytes" widget="integer"/>
                </tree>
            </field>
        </record>

        <!-- Cloud Storage Sync Log Search View -->
        <record id="view_cloud_storage_sync_log_search" model="ir.ui.view">
            <field name="name">cloud.storage.sync.log.search</field>
            <field name="model">cloud_storage.sync.log</field>
            <field name="arch" type="xml">
                <search string="Sync Logs">
                    <field name="file_name"/>
                    <field name="model_name"/>
                    <filter string="Success" name="success" domain="[('status', '=', 'success')]"/>
                    <filter string="Errors" name="errors" domain="[('status', '=', 'error')]"/>
                    <filter string="Manual" name="manual" domain="[('sync_type', '=', 'manual')]"/>
                    <filter string="Automatic" name="automatic" domain="[('sync_type', '=', 'automatic')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('sync_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('sync_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <filter string="This Week" name="this_week" domain="[('sync_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('sync_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Model" name="group_model" context="{'group_by': 'model_name'}"/>
                        <filter string="Sync Type" name="group_sync_type" context="{'group_by': 'sync_type'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'sync_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Cloud Storage Sync Log Action -->
        <record id="action_cloud_storage_sync_log" model="ir.actions.act_window">
            <field name="name">Synchronization Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cloud_storage.sync.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No synchronization logs yet!
                </p>
                <p>
                    Logs will appear here after you run manual or automatic synchronizations.
                    Each sync operation creates detailed logs showing what files were processed.
                </p>
            </field>
        </record>

        <!-- Dashboard/Stats View -->
        <record id="view_cloud_storage_dashboard" model="ir.ui.view">
            <field name="name">cloud.storage.dashboard</field>
            <field name="model">cloud_storage.sync.log</field>
            <field name="arch" type="xml">
                <graph string="Synchronization Statistics" type="bar">
                    <field name="sync_date" type="row" interval="day"/>
                    <field name="status" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Dashboard Action -->
        <record id="action_cloud_storage_dashboard" model="ir.actions.act_window">
            <field name="name">Sync Dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cloud_storage.sync.log</field>
            <field name="view_mode">graph,pivot</field>
            <field name="context">{'search_default_this_week': 1}</field>
        </record>
    </data>
</odoo>