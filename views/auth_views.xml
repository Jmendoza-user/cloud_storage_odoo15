<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cloud Storage Authentication Form View -->
        <record id="view_cloud_storage_auth_form" model="ir.ui.view">
            <field name="name">cloud.storage.auth.form</field>
            <field name="model">cloud_storage.auth</field>
            <field name="arch" type="xml">
                <form string="Google Drive Authentication">
                    <header>
                        <button name="action_authorize" type="object" string="Authorize" 
                                class="oe_highlight" attrs="{'invisible': [('state', 'in', ['authorized', 'pending'])]}"/>
                        <button name="test_connection" type="object" string="Test Connection" 
                                class="oe_highlight" attrs="{'invisible': [('state', '!=', 'authorized')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,authorized"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Configuration Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="client_id" password="True"/>
                                <field name="client_secret" password="True"/>
                                <field name="redirect_uri" placeholder="http://10.10.6.222:8089/cloud_storage/oauth/callback"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="access_token" readonly="1" attrs="{'invisible': [('access_token', '=', False)]}"/>
                                <field name="token_expiry" readonly="1" attrs="{'invisible': [('token_expiry', '=', False)]}"/>
                                <field name="auth_uri" readonly="1" attrs="{'invisible': [('auth_uri', '=', False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Instructions">
                                <group>
                                    <div class="alert alert-info">
                                        <h4>Configuration Steps:</h4>
                                        <ol>
                                            <li>Create a project in Google Cloud Console</li>
                                            <li>Enable Google Drive API</li>
                                            <li>Create OAuth 2.0 credentials</li>
                                            <li>Add redirect URI: http://10.10.6.222:8089/cloud_storage/oauth/callback</li>
                                            <li>Enter Client ID and Client Secret above</li>
                                            <li>Optionally configure a custom Redirect URI</li>
                                            <li>Click "Authorize" to complete authentication</li>
                                        </ol>
                                    </div>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Cloud Storage Authentication Tree View -->
        <record id="view_cloud_storage_auth_tree" model="ir.ui.view">
            <field name="name">cloud.storage.auth.tree</field>
            <field name="model">cloud_storage.auth</field>
            <field name="arch" type="xml">
                <tree string="Google Drive Authentications">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="token_expiry"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Cloud Storage Authentication Action -->
        <record id="action_cloud_storage_auth" model="ir.actions.act_window">
            <field name="name">Google Drive Authentication</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cloud_storage.auth</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Google Drive authentication!
                </p>
                <p>
                    Set up authentication with Google Drive to enable file synchronization.
                    You'll need Google Cloud Console credentials to get started.
                </p>
            </field>
        </record>
    </data>
</odoo>