<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cloud Storage Authentication Form View -->
        <record id="view_cloud_storage_auth_form" model="ir.ui.view">
            <field name="name">cloud.storage.auth.form</field>
            <field name="model">cloud_storage.auth</field>
            <field name="arch" type="xml">
                <form string="Google Drive Authentication" class="cloud_storage_scope">
                    <header>
                        <button name="action_authorize" type="object" string="Authorize" 
                                class="oe_highlight" attrs="{'invisible': [('state', 'in', ['authorized', 'pending'])]}"/>
                        <button name="test_connection" type="object" string="Test Connection" 
                                class="oe_highlight" attrs="{'invisible': [('state', '!=', 'authorized')]}"/>
                        <button name="action_check_token_status" type="object" string="Check Token Status" 
                                class="btn-secondary" attrs="{'invisible': [('state', '!=', 'authorized')]}"/>
                        <button name="action_refresh_token" type="object" string="Refresh Token" 
                                class="btn-warning" attrs="{'invisible': [('state', '!=', 'authorized')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,authorized"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Configuration Name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Credentials" col="4">
                                <field name="client_id" password="True" nolabel="1" placeholder="Google Client ID"
                                       class="o_field_long_text"/>
                                <field name="client_secret" password="True" nolabel="1" placeholder="Google Client Secret"
                                       class="o_field_long_text"/>
                                <field name="redirect_uri" nolabel="1" placeholder="http://10.10.6.222:8089/cloud_storage/oauth/callback"
                                       class="o_field_long_text"/>
                                <field name="is_active" nolabel="1"/>
                            </group>
                        </group>
                        
                        <group string="Token Information" attrs="{'invisible': [('state', '!=', 'authorized')]}">
                            <group string="Access Token" col="1">
                                <field name="access_token" readonly="1" nolabel="1" 
                                       widget="text" class="o_field_long_text o_field_token"/>
                            </group>
                            <group string="Token Details" col="2">
                                <field name="token_expiry" readonly="1" nolabel="1" placeholder="Token Expiry Date"/>
                                <field name="refresh_token" readonly="1" nolabel="1" password="True" 
                                       attrs="{'invisible': [('refresh_token', '=', False)]}"
                                       class="o_field_long_text o_field_token"/>
                            </group>
                        </group>
                        
                        <group string="Authorization URL" attrs="{'invisible': [('auth_uri', '=', False)]}">
                            <field name="auth_uri" readonly="1" nolabel="1" 
                                   widget="url" class="o_field_long_text o_field_url"/>
                        </group>
                        <notebook>
                            <page string="Instructions">
                                <group>
                                    <div class="alert alert-info" role="alert">
                                        <h4>Configuration Steps:</h4>
                                        <ol>
                                            <li>Create a project in Google Cloud Console</li>
                                            <li>Enable Google Drive API</li>
                                            <li>Create OAuth 2.0 credentials</li>
                                            <li>Add redirect URI: http://10.10.6.222:8089/cloud_storage/oauth/callback</li>
                                            <li>Enter Client ID and Client Secret above</li>
                                            <li>Optionally configure a custom Redirect URI</li>
                                            <li>Click "Authorize" to complete authentication</li>
                                        </ol>
                                    </div>
                                </group>
                            </page>
                            <page string="Technical Details" attrs="{'invisible': [('state', '!=', 'authorized')]}">
                                <group>
                                    <group string="Token Information">
                                        <field name="access_token" readonly="1" string="Access Token" 
                                               widget="text" class="o_field_long_text o_field_token"/>
                                        <field name="refresh_token" readonly="1" string="Refresh Token" password="True"
                                               attrs="{'invisible': [('refresh_token', '=', False)]}"
                                               class="o_field_long_text o_field_token"/>
                                        <field name="token_expiry" readonly="1" string="Token Expiry"/>
                                    </group>
                                    <group string="Authorization Details">
                                        <field name="auth_uri" readonly="1" string="Authorization URL" 
                                               widget="url" class="o_field_long_text o_field_url"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Cloud Storage Authentication Tree View -->
        <record id="view_cloud_storage_auth_tree" model="ir.ui.view">
            <field name="name">cloud.storage.auth.tree</field>
            <field name="model">cloud_storage.auth</field>
            <field name="arch" type="xml">
                <tree string="Google Drive Authentications">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="token_expiry"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Cloud Storage Authentication Action -->
        <record id="action_cloud_storage_auth" model="ir.actions.act_window">
            <field name="name">Google Drive Authentication</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cloud_storage.auth</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Google Drive authentication!
                </p>
                <p>
                    Set up authentication with Google Drive to enable file synchronization.
                    You'll need Google Cloud Console credentials to get started.
                </p>
            </field>
        </record>
    </data>
</odoo>